<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fileBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File System Black List"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/fBRegex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </EditText>

    <TextView
        android:id="@+id/fileWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File System White List"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/fWRegex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/internetBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internet Black List"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/iBRegex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/internetWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internet White List"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/iWRegex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

</LinearLayout>